              <picker-view-column>
                <view wx:for="{{hours}}" wx:key="unique" style="line-height: 50px">{{item}}</view>
              </picker-view-column>
              <picker-view-column>
                <view wx:for="{{minutes}}" wx:key="unique" style="line-height: 50px">{{item}}</view>
