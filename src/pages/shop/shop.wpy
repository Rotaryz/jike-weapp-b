<template>
  <view class="shop">
    <view class="shop-header">
      <navigator url="/pages/qrCode/qrCode">
        <image src="./icon-inputcode@2x.png"></image>
        <view>输码核销</view>
      </navigator>
      <view @tap="scanCodes">
        <image src="./icon-scancode@2x.png"></image>
        <view>扫码核销</view>
      </view>
      <navigator url="/pages/cancel-record/cancel-record">
        <image src="./icon-record@2x.png"></image>
        <view>核销记录</view>
      </navigator>
    </view>
    <view class="shop-father">
      <view class="shop-manage">
        <view class="meHea">
          <text>经营概况</text>
          <view>
            <text wx:for="{{times}}" wx:key="{{index}}"
                  class="{{showTime ===index ?'sh-active' : ''}}"
                  @tap="showData({{item.type}},{{index}})">{{
              item.title}}
            </text>
          </view>
        </view>
        <view class="meCon">
          <view>
            <view>{{dataList.hit.count}}</view>
            <view>浏览总量(次)</view>
          </view>
          <view>
            <view>{{dataList.order.count}}</view>
            <view>订单总量(个)</view>
          </view>
          <view>
            <view>{{dataList.money.count}}</view>
            <view>消费金额(元)</view>
          </view>
        </view>
      </view>
      <view class="shop-extend">
        <navigator wx:for="{{navList}}" wx:key="{{index}}" url="{{item.src}}">
          <image src="{{item.image}}"></image>
          <view>{{item.text}}</view>
        </navigator>

      </view>
    </view>

  </view>
</template>

<script>
  import wepy from 'wepy'
  import shop from 'api/shop'
  export default class Shop extends wepy.page {
    config = {
      navigationBarTitleText: '商家助手',
      navigationBarBackgroundColor: '#363547',
      navigationBarTextStyle: 'white'
    }
    data = {
      showTime: 0,
      times: [{
        title: '昨天',
        type: 'yeaterday'
      }, {
        title: '七天',
        type: 'week'
      }],
      navList: [{
        text: '服务',
        image: './icon-service@2x.png',
        src: '/pages'
      }, {
        text: '客户',
        image: './icon-customer@2x.png',
        src: '/pages/client/client'
      }, {
        text: '商圈',
        image: './icon-tradingarea@2x.png',
        src: '/pages/business/business'
      }, {
        text: '礼包',
        image: './icon-package@2x.png',
        src: '/pages'
      }, {
        text: '评价',
        image: './icon-evaluate@2x.png',
        src: '/pages/evaluate/evaluate'
      }, {
        text: '订单',
        image: './icon-asset@2x.png',
        src: '/pages/order/order'
      }, {
        text: '内容',
        image: './icon-content@2x.png',
        src: '/pages/content/content'
      }, {
        text: '',
        image: ''
      }, {
        text: '',
        image: ''
      }],
      dataList: [],
    }

    async load(time = 'yesterday', type = 'hit') {
      let data = {time: time, type: type}
      let res = await shop.dataTrend(data)
      this.dataList = res.detail
      this.$apply()
    }

    async scanCodes() {
      let res = await wepy.scanCode({onlyFromCamera: false})
      res = JSON.parse(res.result)
      let code = res.code
      let data = await shop.verification(code)
      console.log(data)
    }

    methods = {
      async showData(time, index) {
        this.showTime = index
        await this.load(time)
      }
    }

    async onLoad() {
      await this.load()
    }
  }
</script>

