<template>
  <view class="lives" scroll-y="true"
        enable-back-to-top="true">
    <view class="live" id="lis">
      <scroll-view class="live_conpon" scroll-y>
        <view class="con-item" wx:for="{{activityPromotion}}"
              wx:key="index"
              @tap="conponDetail({{item.promotion_id}},{{index}})">
