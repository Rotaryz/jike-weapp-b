            <view class="monlogo">{{item.promotion_shop_price}}</view>
          </view>
        </view>
      </scroll-view>
      <view class="live_video video-bk" wx:if="{{!showVideo}}">
        <image src="./pic-livenone@2x.png"></image>
      </view>
      <video class="live_video"
             src="{{videoSrc}}"
             poster="{{videoImage}}"
             wx:if="{{showVideo}}">
      </video>
    </view>
