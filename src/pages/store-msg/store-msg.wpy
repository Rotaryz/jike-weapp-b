<script>
  /* eslint-disable no-undef */
  import wepy from 'wepy'
  import base from '@/common/mixins/base'
  import RadioBox from '@/base/radio/radio'
  import TwoRadioBox from '@/base/second-radio/second-radio'
  import TwoColumnRadioBox from '@/base/radio-twoColumn/radio-twoColumn'
  import QQMapWX from '@/common/libs/qqmap-wx-jssdk'
  import tips from '@/common/js/tips'
  import Store from '@/api/store'

  export default class StoreMsg extends wepy.page {
    mixins = [base]

    config = {
      navigationBarTitleText: '门店基础信息',
      navigationBarBackgroundColor: '#fff',
      navigationBarTextStyle: 'black',
      backgroundColor: '#F9F9F9'
    }

    components = {
      RadioBox,
      TwoRadioBox,
      TwoColumnRadioBox
    }

    data = {
      hours: [],
      minutes: ['00', '30'],
      Induring: '',
      showMap: true,
      telTest: true,
      name: '',
      description: '',
      industryName: '',
      industry: '',
      tel: '',
      site: '',
      mapAddress: '',
      storeStatus: '',
      storeStatusTxt: '',
      longitude: 0,
      latitude: 0,
      area: '',
      areaId: '',
      areaArr: [],
      region: ['', '', ''],
      markers: [{
        iconPath: './image/icon-site@2x.png',
        id: 0,
        latitude: 0,
        longitude: 0,
        width: 33,
        height: 33
      }],
      mapCtx: '',
      timeCover: false,
      hourBegin: '',
      hourEnd: '',
      hourChioseArr: [7, 0, 21, 0],
      hourIn: true,
      weekIn: false,
      weekValue: [
        {value: '0', txt: '星期一', checked: false},
        {value: '1', txt: '星期二', checked: false},
        {value: '2', txt: '星期三', checked: false},
        {value: '3', txt: '星期四', checked: false},
        {value: '4', txt: '星期五', checked: false},
        {value: '5', txt: '星期六', checked: false},
        {value: '6', txt: '星期日', checked: false}
      ],
      weekChecked: []
    }

    async onLoad() {
      this.load()
      console.log(this)
    }

    async load() {
      for (let i = 0; i <= 23; i++) {
        this.hours.push(i)
      }
      this.qqmapsdk = new QQMapWX({
        key: 'WPABZ-ZVD6P-RJJD5-VSCIN-BBADV-FMFJX'
      })
      let res = await Store.getMsgList()
      if (res.shop_name) {
        this.Induring = res
        this.name = res.shop_name
        this.industry = res.industry
        this.industryName = res.industry.name
        this.description = res.describe
        this.tel = res.mobile
        this.site = res.address
        this.mapAddress = res.address
        this.region = [res.business_circle.province, res.business_circle.city, res.business_circle.district]
        this.longitude = res.longitude ? res.longitude : 113.324520
        this.latitude = res.latitude ? res.latitude : 23.099994
        this.markers[0].longitude = this.longitude
        this.markers[0].latitude = this.latitude
        this.area = res.business_circle.name
        this.areaId = res.business_circle_id
        this.storeStatus = res.open_status
        let arr = ['暂停营业', '营业中', '筹建中', '已关闭']
        this.storeStatusTxt = arr[this.storeStatus]
        this.areaArr = await Store.getArea(res.business_circle.district)
        this.weekChecked = res.week_day.split(',')
        this._choiseChecked(this.weekValue)
        this.hourBegin = res.open_time
        this.hourEnd = res.close_time
        this.hourChioseArr[0] = res.open_time.split(':')[0]
        this.hourChioseArr[1] = res.open_time.split(':')[1] === '00' ? '0' : '1'
        this.hourChioseArr[2] = res.close_time.split(':')[0]
        this.hourChioseArr[3] = res.close_time.split(':')[1] === '00' ? '0' : '1'
        this._mapAuto()
      }
      this.loaded()
    }

    onReady() {
      this.mapCtx = wx.createMapContext('myMap')
    }

    methods = {
      industryChiose() {
        this.showMap = false
        let radioChecked = {
          two: this.industry.id,
          one: this.industry.parent_id
        }
        let listMsg = {
          headTxt: '行业类型',
          radioChecked,
          oneTitle: 'industries',
          twoTitle: 'industry',
          industries: this.Induring.industries
        }
        this.$invoke('TwoRadioBox', 'init', listMsg)
      },
      areaChiose() {
        this.showMap = false
        let radioChecked = this.areaId
        if (this.region[2]) {
          let listMsg = {
            headTxt: '商圈',
            title: this.region[2],
            radioChecked,
            items: this.areaArr
          }
          this.$invoke('TwoColumnRadioBox', 'init', listMsg)
        } else {
          tips.error('请选择地区')
        }
      },
      showRadio() {
        this.showMap = false
        this.$invoke('RadioBox', 'init', {
          headTxt: '营业状态',
          radioChecked: this.storeStatusTxt,
          items: [
            {value: '0', txt: '暂停营业'},
            {value: '1', txt: '营业中'},
            {value: '2', txt: '筹建中'},
            {value: '3', txt: '已关闭'}]
        })
      },
      txtChange(e) {
        let eventId = e.target.id
        switch (eventId) {
          case 'storeTel':
            let reg = /^1[3|4|5|7|8][0-9]{9}$/
            this.telTest = reg.test(e.detail.value)
            this.tel = e.detail.value
            break
          case 'storeName':
            this.name = e.detail.value
            break
          case 'storeDescription':
            this.description = e.detail.value
            break
          case 'storeSite':
            let mapAddress = this.region[0] + this.region[1] + this.region[2] + e.detail.value
            this.site = e.detail.value
            this._mapAuto(mapAddress)
            break
        }
      },
      async bindRegionChange(e) {
        this.region = e.detail.value
        this.mapAddress = this.region[0] + this.region[1] + this.region[2]
        this._mapAuto(this.mapAddress)
        this.areaArr = await Store.getArea(this.region[2])
        console.log(this.areaArr)
      },
      mapTap(e) {
        console.log(e)
      },
      getCenter() {
        let self = this
        this.mapCtx.getCenterLocation({
          success: (res) => {
            console.log(res.longitude)
            console.log(res.latitude)
            self.mapCtx.translateMarker({
              markerId: 0,
              autoRotate: false,
              duration: 200,
              destination: {
                latitude: res.latitude,
                longitude: res.longitude
              },
              animationEnd() {
                self.qqmapsdk.reverseGeocoder({
                  location: {
                    latitude: res.latitude,
                    longitude: res.longitude
                  },
                  success: (resData) => {
                    self.mapAddress = resData.result.address
                    self.longitude = res.longitude
                    self.latitude = res.latitude
                  }
                })
              }
            })
          }
        })
      },
      hourChiose() {
        this.hourIn = !this.hourIn
        this.weekIn = !this.hourIn
      },
      weekChiose() {
        this.weekIn = !this.weekIn
        this.hourIn = !this.weekIn
      },
      hourChange(e) {
        this.hourChioseArr = e.detail.value
        this.$apply()
      },
      hourCancle() {
        this.hourIn = false
        this.weekIn = true
        this.hourChioseArr = []
        this.$apply()
      },
      hourSubmit() {
        this.hourIn = false
        this.weekIn = true
        let beginMinute = this.hourChioseArr[1] === 0 ? '00' : '30'
        let endMinute = this.hourChioseArr[3] === 0 ? '00' : '30'
        this.hourBegin = this.hourChioseArr[0] + ':' + beginMinute
        this.hourEnd = this.hourChioseArr[2] + ':' + endMinute
      },
      weekChange(e) {
        console.log(e.detail.value)
        this.weekChecked = e.detail.value
        this._choiseChecked(this.weekValue)
        this.$apply()
      },
      closeTimeCover() {
        this.timeCover = false
        this.showMap = true
        this.$apply()
      },
      showTimeCover() {
        this.timeCover = true
        this.showMap = false
        this.$apply()
      },
      storeMsgSubmit() {
        let res = this._testPropety(this.name, this.description, this.tel, this.telTest, this.industry.id, this.areaId, this.site, this.storeStatus, this.hourBegin, this.hourEnd, this.weekChecked.length, this.longitude, this.latitude)
        if (res) {
          let data = {
            shop_name: this.name,
            describe: this.description,
            mobile: this.tel,
            industry_id: this.industry.id,
            business_circle_id: this.areaId,
            address: this.site,
            open_status: this.storeStatus,
            open_time: this.hourBegin,
            close_time: this.hourEnd,
            week_day: this.weekChecked,
            longitude: this.longitude,
            latitude: this.latitude
          }
          console.log(data)
        }
      }
    }

    events = {
      radioChioseOK(item) {
        this.showMap = true
        this.storeStatus = Number(item[0].value)
        this.storeStatusTxt = item[0].txt
        this.$apply()
        console.log(this)
      },
      secondRadioOK(item, title) {
        this.showMap = true
        switch (title) {
          case 'industries':
            if (item) {
              this.industry = item
              this.industryName = item.name
            }
            break
        }
        console.log(item)
      },
      twoColumnRadioOK(item) {
        this.showMap = true
        this.area = item.name
        this.areaId = item.id
        this.$apply()
      }
    }

    _mapAuto(address) {
      let self = this
      this.qqmapsdk.geocoder({
        address: address,
        success: (res) => {
          let location = res.result.location
          self.longitude = location.lng
          self.latitude = location.lat
          self.markers[0].longitude = location.lng
          self.markers[0].latitude = location.lat
          self.$apply()
        },
        fail: function(res) {
          console.log(res)
        }
      })
    }

    _choiseChecked(arr) {
      arr.forEach((item) => {
        if (this.weekChecked.indexOf(item.value) !== -1) {
          item.checked = true
        } else {
          item.checked = false
        }
      })
    }

    _testPropety() {
      let arr = Array.prototype.slice.call(arguments, 0)
      return arr.every((item) => {
        return item
      })
    }
  }
</script>

