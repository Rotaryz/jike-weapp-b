<template>
  <view class="header-switch-component">
    <view class="header-switch" wx:if="{{isShowBtn}}">
      <view class="h-s-title">{{title}}</view>
      <view class="h-s-switch-box {{switchStyle}}" bindtap="handleClick">
        <view class="h-s-switch-circle {{switchStyle}}"></view>
      </view>
    </view>
    <view hidden="{{!isShowContent}}">
      <slot></slot>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'

  const ON = 'on'
  // const OFF = 'off'

  export default class HeaderSwitch extends wepy.component {
    props = {
      title: {
        type: String,
        default: ''
      },
      isChecked: {
        type: String,
        default: ON
      },
      activityStatus: {
        type: String,
        default: 'success'
      }
    }

    computed = {
      switchStyle() {
        return this.isChecked === ON ? 'checked' : ''
      },
      isShowBtn() {
        return this.activityStatus.trim() === 'success'
      },
      isShowContent() {
        if (this.isShowBtn) {
          return this.isChecked === ON
        } else {
          return false
        }
      }
    }

    methods = {
      handleClick() {
        this.$emit('headerSwitchChange')
      }
    }
  }
</script>

