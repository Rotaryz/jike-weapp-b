@import "./variable.styl"

.swiper-container .dots
  position: absolute
  left: 0
  right: 12px
  bottom: 10px
  display: flex
  justify-content: center

.swiper-container .dots .dot
  width: 5px
  height: 5px
  margin: 0 2.5px
  border-radius: 50%
  transition: all .6s

.swiper-container .dots .dot.active
  width: 12.5px

.full-image
  display: block
  width: 100%
  height: 100%

.block-title
  display: flex
  align-items: center
  height: 40px
  padding: 0 12px
  font-size: $font-size-medium
  color: $color-text-d
  background-color: $color-background
  &:before
    position: relative
    display: block
    content: ''
    width: 5px
    height: 13px
    margin-right: 2px
    background: $color-assist-f
