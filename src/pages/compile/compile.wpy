<template>
  <view class="compile">
      <textarea name="compile" id="" auto-height auto-focus
                placeholder="请输入" bindconfirm="confirm"
                value="{{vaule}}" textarea="1000"></textarea>
  </view>
</template>

<script>
  import wepy from 'wepy'

  export default class compile extends wepy.page {
    config = {
      navigationBarTitleText: '添加文字',
      navigationBarBackgroundColor: '#363547',
      navigationBarTextStyle: 'white'
    }
    data = {
      index: -1,
      vaule: ''
    }
    methods = {
      async confirm(e) {
        this.$parent.globalData.fontText = e.detail.value
        this.$parent.globalData.index = this.index
        await wepy.navigateBack({
          delta: 1
        })
//        回到创建内容页面
      }
    }

    onLoad(options) {
      this.index = options.index * 1
      this.$apply()
    }

    onShow() {

//      console.log(this.$parent.globalData.fontText)
      this.$apply()
    }

    computed = {
      values(){
        this.value = this.$parent.globalData.fontText !== null ? this.$parent.globalData.fontText : ''
        return this.value
      }

    }
  }
</script>

